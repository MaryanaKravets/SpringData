<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="4" author="Maryanna">
        <addPrimaryKey tableName="Author_Books" columnNames="author_id, book_id"/>

        <addForeignKeyConstraint baseTableName="Author_Books" baseColumnNames="author_id" constraintName="FK_Author_Author_Book" referencedTableName="authors"
                                 referencedColumnNames="id" onDelete="CASCADE" onUpdate="RESTRICT"/>

        <addForeignKeyConstraint baseTableName="Author_Books" baseColumnNames="book_id" constraintName="FK_Book_Author_Book" referencedTableName="books"
                                 referencedColumnNames="id" onDelete="CASCADE" onUpdate="RESTRICT"/>

    </changeSet>


</databaseChangeLog>
